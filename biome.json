{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "jsxQuoteStyle": "double",
            "quoteStyle": "double",
            "semicolons": "asNeeded",
            "trailingCommas": "es5"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    },
    "files": {
        "ignore": ["node_modules"],
        "include": ["src/**/*.ts", "src/**/*.tsx"]
    }
}
